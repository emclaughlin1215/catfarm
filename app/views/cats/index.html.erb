<h1>Listing cats</h1>

<%= link_to 'New cat', new_cat_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Rescue ID</th>
    <th colspan=2>Actions</th>
  </tr>

  <% @cats.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.rescue_id %></td>
      <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
      <td><%= link_to 'Delete', cat_path(cat),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>